{
  "name": "backend",
  "version": "2.0.0",
  "description": "Backend of AGROINVEST project",
  "scripts": {
    "start": "node build/bundle.min.js --action=start",
    "start:dev": "node build/bundle.js --action=start",
    "stop": "node build/bundle.min.js --action=stop",
    "stop:dev": "node build/bundle.js --action=stop",
    "init:install": "rm package-lock.json; npm install -f; npm run init:data-export",
    "init:data-export": "cd ..; git clone https://$AGROINVEST_DEPLOYMENT_KEY@github.com/elomscansio/agroinvest-data-export; cd ./backend",
    "update": "git reset --hard origin; git pull;",
    "build": "npm run build:clear; npx tsc; npm run bundle:prod",
    "bundle": "rollup -c",
    "bundle:prod": "rollup -c rollup.config.prod.js",
    "createIndexHtmls": "node build/bundle.min.js --action=createIndexHtmls",
    "build:clear": "rm -rf ./dist; rm -rf ./build",
    "build:dev": "tsc && npm run bundle",
    "compileThenRun": "npm run build:clear; npm run build:dev; npm start",
    "database:init": "npx sequelize-cli init",
    "database:reset": "npx sequelize-cli db:drop; npx sequelize-cli db:create; npx sequelize-cli db:migrate",
    "migration:generate": "npx sequelize-cli migration:generate --name update-timestamps-to-json",
    "migration:db": "npx sequelize-cli db:migrate",
    "format": "prettier --write ./src",
    "lint": "eslint ./src",
    "lint:autofix": "eslint ./src --fix",
    "prettier": "prettier ./src",
    "prettier:fix": "prettier --write ./src"
  },
  "author": "agroinvesttech@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@aizon/node-paystack": "^1.3.3",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-dynamic-import-vars": "^2.1.5",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.13",
    "@types/dompurify": "^3.0.2",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.3",
    "@types/nodemailer": "^6.4.7",
    "@types/passport": "^1.0.13",
    "@types/passport-google-oauth2": "^0.1.6",
    "@types/ws": "^8.5.6",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dompurify": "^3.0.5",
    "dotenv": "^16.0.3",
    "expo-server-sdk": "^3.13.0",
    "express": "^4.21.1",
    "express-validator": "^7.1.0",
    "google-auth-library": "^8.9.0",
    "googleapis": "^114.0.0",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.14.1",
    "nodemailer": "^6.9.1",
    "nodemon": "^2.0.21",
    "passport": "^0.6.0",
    "passport-google-oauth2": "^0.2.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-google-oauth20-with-people-api": "^2.0.0",
    "rollup": "^4.44.2",
    "@rollup/plugin-terser": "^0.4.4",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "winston": "^3.8.2",
    "ws": "^8.14.2"
  },
  "dependencies": {
    "pg-hstore": "^2.3.4"
  }
}
